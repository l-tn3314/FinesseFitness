<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"> <!--IMPORTANT otherwise backgrnd img. will not fill the whole screen -->

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context="com.example.finessefitness.MainActivity">

    <TextView
        android:id="@+id/textProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to FinesseFitness!"
        android:textColor="#FFFFFF"
        android:background="#356e9b"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:textColor="#8080a3"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:textSize = "26sp"
        android:id="@+id/textView2"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/textProfile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#a9c1e7"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:textColor="#8080a3"
        android:layout_height="wrap_content"
        android:text="Last Name"
        android:textSize = "26sp"
        android:layout_marginTop="15dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/firstname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#a9c1e7"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#a9c1e7"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:textColor="#8080a3"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize = "26sp"
        android:id="@+id/textView4"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/lastname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#a9c1e7"
        android:inputType="textPassword"
        android:imeOptions="actionNext"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

        <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#a9c1e7"
        android:inputType="textEmailAddress"
        android:imeOptions="actionNext"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:textColor="#8080a3"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textSize = "26sp"
        android:layout_below="@+id/email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/textView7" />

    <EditText
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#a9c1e7"
        android:inputType="phone"
        android:imeOptions="actionNext"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:textColor="#8080a3"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize = "26sp"
            android:layout_marginTop="15dp"
            android:id="@+id/textView6"
            android:layout_below="@+id/password"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:textColor="#8080a3"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize = "26sp"
            android:layout_marginTop="15dp"
            android:id="@+id/textView5"
            android:layout_below="@+id/username"
            android:layout_alignLeft="@+id/password"
            android:layout_alignStart="@+id/password" />

        <TextView
            android:layout_width="match_parent"
            android:textColor="#8080a3"
            android:textSize = "26sp"
            android:layout_height="wrap_content"
            android:text="Height"
            android:layout_marginTop="14dp"
            android:id="@+id/textView8"
            android:layout_below="@+id/phone_number"
            android:layout_alignLeft="@+id/phone_number"
            android:layout_alignStart="@+id/phone_number" />

        <EditText
            android:id="@+id/height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#a9c1e7"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:layout_below="@+id/textView8"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8" />

        <EditText
            android:id="@+id/weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#a9c1e7"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:layout_below="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:textColor="#8080a3"
            android:textSize = "26sp"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:id="@+id/textView9"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:text="Join!"
            android:onClick="AddInformation"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="#356e9b"
            android:layout_below="@+id/weight"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="19dp" />
    </RelativeLayout>
    </ScrollView>